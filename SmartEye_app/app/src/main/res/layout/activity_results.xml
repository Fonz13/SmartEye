        android:textStyle="bold"
        android:layout_marginTop="30dp"
        />

    <ImageView
        android:layout_below="@id/header"
        android:layout_width="350dp"
        android:layout_height="370dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
