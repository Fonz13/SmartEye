<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".howToActivity"
    android:background="@color/backGroundColor">

    <ImageView
        android:id="@+id/one"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_looks_one_24"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        app:tint="@color/newButton"/>
    <ImageView
        android:id="@+id/two"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_looks_two_24"
        android:layout_below="@+id/one"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="50dp"
        app:tint="@color/newButton"/>
    <ImageView
        android:id="@+id/three"
        android:layout_below="@+id/two"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_looks_3_24"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        app:tint="@color/newButton"/>
    <ImageView
        android:id="@+id/four"
        android:layout_below="@id/three"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_looks_4_24"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        app:tint="@color/newButton"/>
    <ImageView
        android:id="@+id/five"
        android:layout_below="@id/four"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_looks_5_24"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        app:tint="@color/newButton"/>
    <TextView
        android:id="@+id/steg1"
        android:layout_toEndOf="@+id/one"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="30dp"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:text="Matcha cirkeln på skärmen med personens iris."
        android:textColor="#444855"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/steg2"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_below="@+id/steg1"
        android:layout_toEndOf="@id/two"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:text="Sätt fokus på ögat genom att peka på ögat på skärmen."
        android:textColor="#444855"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/steg3"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_below="@id/steg2"
        android:layout_toEndOf="@id/three"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="30dp"
        android:text="Klicka på knappen för att börja mätning."
        android:textColor="#444855"
        android:layout_centerHorizontal="true"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/steg4"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_below="@id/steg3"
        android:text="Fyll i frågeformuläret."
        android:layout_toEndOf="@id/four"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:textColor="#444855"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/steg5"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@id/five"
        android:layout_below="@id/steg4"
        android:text="Se resultatet."
        android:textColor="#444855"
        android:layout_marginLeft="30dp"
        android:textSize="17sp"
        android:textStyle="bold"
        />
    <ImageView
        android:id="@+id/rounded_background"
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/rounded"
        android:elevation="-1dp"
        >
    </ImageView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/goback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:backgroundTint="@color/blueButton"
        android:layout_margin="50dp"
        android:layout_alignParentBottom="true"
        />


</RelativeLayout>